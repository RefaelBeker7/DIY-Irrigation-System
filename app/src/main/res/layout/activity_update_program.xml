<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.refael.blueOrganic.Program">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/drops"
        android:orientation="vertical"
        android:weightSum="7"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#999"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvActivityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Program"
                android:textSize="20dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etProgramName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="3"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Start Time"

                    />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time :"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration :"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/etduration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

            <CheckBox
                android:background="#7894"
                android:layout_margin="3dp"
                android:id="@+id/cbMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mon"
                android:textStyle="bold"
                android:textColor="#54FF29"
                android:onClick="selectItem"
                />

            <CheckBox
                android:background="#7894"
                android:layout_margin="3dp"
                android:id="@+id/cbTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tue"
                android:textStyle="bold"
                android:textColor="#54FF29"
                android:onClick="selectItem"
                />

            <CheckBox
                android:background="#7894"
                android:layout_margin="3dp"
                android:id="@+id/cbWen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wen"
                android:textStyle="bold"
                android:textColor="#54FF29"
                android:onClick="selectItem"
                />

            <CheckBox
                android:background="#7894"
                android:layout_margin="3dp"
                android:id="@+id/cbThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thu"
                android:textStyle="bold"
                android:textColor="#54FF29"
                android:onClick="selectItem"
                />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <CheckBox
            android:background="#7894"
            android:layout_margin="3dp"
            android:id="@+id/cbFri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fri"
            android:textStyle="bold"
            android:textColor="#54FF29"
            android:onClick="selectItem"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="    "
            android:textSize="20dp" />
        <CheckBox
            android:background="#7894"
            android:layout_margin="3dp"
            android:id="@+id/cbSat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sat"
            android:textStyle="bold"
            android:textColor="#54FF29"
            android:onClick="selectItem"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="    "
            android:textSize="20dp" />
        <CheckBox
            android:background="#7894"
            android:layout_margin="3dp"
            android:id="@+id/cbSun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sun"
            android:textStyle="bold"
            android:textColor="#54FF29"
            android:onClick="selectItem"
            />

    </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="UPDATE"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_backround"
            android:textColor="#54FF29"
            android:onClick="Save"
            />

    </LinearLayout>



</RelativeLayout>